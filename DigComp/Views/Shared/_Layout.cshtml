<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>DigComp Education - Đổi mới tương lai</title>
    <link rel="shortcut icon" href="~/assets/images/logo/Final DCE logo with text-BlueBG.png">

    <!-- fraimwork - css include -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- icon font - css include -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/stroke-gap-icons.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/icofont.css">

    <!-- animation - css include -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/animate.css">

    <!-- carousel - css include -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/slick.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/slick-theme.css">

    <!-- popup - css include -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/magnific-popup.css">

    <!-- jquery-ui - css include -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/jquery-ui.css">

    <!-- select option - css include -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/nice-select.css">

    <!-- custom - css include -->
    <link rel="stylesheet" type="text/css" href="~/assets/css/style.css">

</head>


<body>

    <!-- body_wrap - start -->
    <div class="body_wrap">

        <!-- backtotop - start -->
        <div class="backtotop">
            <a href="#" class="scroll">
                <i class="far fa-arrow-up"></i>
            </a>
        </div>
        <!-- backtotop - end -->
        <!-- preloader - start -->
        <div id="preloader"></div>
        <!-- preloader - end -->
        <!-- header_section - start
        ================================================== -->
        <header class="header_section">
            <div class="header_top">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col col-md-6">
                            <ul class="header_select_options ul_li">
                                <li>
                                    <div class="select_option">
                                        <div class="flug_wrap">
                                            <img src="~/assets/images/flug/flug_uk.png" alt="English">
                                        </div>
                                        <select id="language-selector" onchange="changeLanguage(this)">
                                            <option value="en-US">English</option>
                                            <option value="vi-VN">Tiếng Việt</option>
                                        </select>
                                    </div>
                                </li>
                            </ul>
                        </div>
                        <div class="col col-md-6">
                            <p class="header_hotline">(+84) 0706767778</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header_middle">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col col-lg-2 col-5">
                            <div class="brand_logo">
                                <a class="brand_link" asp-controller=Home asp-action="Index">
                                    <img src="~/assets/images/logo/Final DCE logo with text-BlueBG.png" alt="DigComp Education - Đổi mới tương lai">
                                </a>
                            </div>
                        </div>
                        <div class="col col-lg-8 col-2">
                            <nav class="main_menu navbar navbar-expand-lg">
                                <div class="main_menu_inner collapse navbar-collapse justify-content-center" id="main_menu_dropdown">
                                    <ul class="main_menu_list ul_li">
                                        <li><a asp-controller="Course" asp-action="Index">Khóa học</a></li>
                                        <li><a asp-controller="Service" asp-action="Index">Dịch vụ</a></li>
                                        <li><a asp-controller="Home" asp-action="ListTeacher">Giảng viên</a></li>
                                        <li><a asp-controller="Home" asp-action="AboutCompany">Giới thiệu</a></li>
                                        <li class="dropdown">
                                            <a class="nav-link" href="#" id="shop_info_submenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Danh sách yêu thích
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="shop_info_submenu">
                                                <li><a asp-controller="Course" asp-action="WLCourse">Khóa học</a></li>
                                                <li><a asp-controller="Service" asp-action="WLService">Sản phẩm dịch vụ</a></li>
                                            </ul>
                                        </li>
                                        <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                                    </ul>
                                </div>
                            </nav>
                        </div>

                        <div class="col col-lg-2 col-5">
                            <ul class="header_icons_group ul_li_right">
                                <li>
                                    <button class="mobile_menu_btn navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main_menu_dropdown" aria-controls="main_menu_dropdown" aria-expanded="false" aria-label="Toggle navigation">
                                        <i class="fal fa-bars"></i>
                                    </button>
                                </li>
                                @if (!string.IsNullOrEmpty(ViewBag.Username))
                                {
                                    <li>
                                        <a asp-controller="Home" asp-action="Account" title="Trang cá nhân">
                                            <i class="fa-regular fa-user"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Home" asp-action="Logout" title="Đăng xuất">
                                            <i class="fa-solid fa-sign-out-alt"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a asp-controller="Home" asp-action="Login" title="Đăng nhập">
                                            <i class="fa-solid fa-sign-in-alt"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Home" asp-action="Register" title="Đăng ký">
                                            <i class="fa-solid fa-user-plus"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </div>

            <div class="header_bottom">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col col-md-3 col-6">
                            <div class="allcategories_dropdown">
                                <button class="allcategories_btn" type="button" data-bs-toggle="collapse" data-bs-target="#allcategories_collapse" aria-expanded="false" aria-controls="allcategories_collapse">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="15" height="13" viewBox="0 0 15 13">
                                        <image width="15" height="13" xlink:href="data:img/png;base64," />
                                    </svg>
                                    Danh mục
                                </button>
                                <div class="allcategories_collapse collapse" id="allcategories_collapse">
                                    <div class="card card-body">
                                        <ul class="allcategories_list ul_li_block">
                                            <li><a asp-controller="Course" asp-action="Index"><i class="fa-duotone fa-rocket-launch"></i> Khóa học</a></li>
                                            <li><a asp-controller="Service" asp-action="Index"><i class="fa-duotone fa-earth-americas"></i> Dịch vụ</a></li>
                                            <li><a asp-controller="Home" asp-action="ListTeacher"><i class="fa-duotone fa-star-christmas"></i> Đội ngũ giảng viên</a></li>
                                            <li><a asp-controller="Home" asp-action="AboutCompany"><i class="fa-duotone fa-mobile-screen"></i> Giới thiệu công ty</a></li>
                                            <li><a><i class="fa-duotone fa-computer-classic"></i> Danh sách yêu thích</a></li>
                                            <li><a><i class="fa-solid fa-lightbulb-cfl"></i> FAQ & Hỗ trợ</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col col-md-6">
                            <form action="#">
                                <div class="advance_serach">
                                    <div class="form_item">
                                        <input type="search" name="search" placeholder="Tìm kiếm khóa học, dịch vụ...">
                                    </div>
                                    <button type="submit" class="search_btn"><i class="far fa-search"></i></button>
                                </div>
                            </form>
                        </div>

                        <div class="col col-md-3 col-6">
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- header_section - end
        ================================================== -->
        
        <!-- main body - start
        ================================================== -->
        <main>
            @RenderBody()


            <!-- newsletter_section - start
            ================================================== -->
            <section class="newsletter_section">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col col-lg-6">
                            <h2 class="newsletter_title text-white">
                                <i class="icofont-paper-plane"></i>
                                Đăng ký để nhận bản tin
                            </h2>
                        </div>
                        <div class="col col-lg-6">
                            <form action="#!">
                                <div class="newsletter_form">
                                    <input type="email" name="email" placeholder="Nhập địa chỉ email của bạn">
                                    <button type="submit" class="btn btn_danger">Gửi</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
            <!-- newsletter_section - end
            ================================================== -->
        </main>
        <!-- main body - end
        ================================================== -->
        <!-- footer_section - start
        ================================================== -->
        <footer class="footer_section">
                <div class="container">
                    <div class="row">
                        <div class="col col-lg-4 col-md-6 col-sm-6">
                            <div class="footer_widget footer_about">
                                <div class="brand_logo">
                                    <a class="brand_link" href="index.html">
                                        <img src="~/assets/images/logo/NEW_-GfE-Badges-Horizontal_Certified-Trainer-1.png" alt="DigComp Education - Đổi mới tương lai">
                                    </a>
                                </div>
                                <p>
                                    Công ty giáo dục tiên phong trong lĩnh vực chuyển đổi số và đổi mới sáng tạo. Chúng tôi cam kết mang đến các giải pháp giáo dục chất lượng cao, giúp thế hệ trẻ thích nghi và vươn lên trong thế giới số.
                                </p>
                                <ul class="social_round ul_li">
                                    <li><a href="#!"><i class="icofont-youtube-play"></i></a></li>
                                    <li><a href="#!"><i class="icofont-instagram"></i></a></li>
                                    <li><a href="#!"><i class="icofont-twitter"></i></a></li>
                                    <li><a href="#!"><i class="icofont-facebook"></i></a></li>
                                    <li><a href="#!"><i class="icofont-linkedin"></i></a></li>
                                </ul>
                            </div>
                        </div>

                        <div class="col col-lg-2 col-md-3 col-sm-6">
                            <div class="footer_widget footer_useful_links">
                                <h3 class="footer_widget_title text-uppercase">Thông tin liên hệ</h3>
                                <ul class="ul_li_block">
                                    <li><strong>Địa chỉ:</strong> 108 Trần Đình Xu, P. Nguyễn Cư Trinh, Q. 1, TP.HCM</li>
                                    <li><strong>Email:</strong> info@digcomp.edu.vn</li>
                                    <li><strong>Số điện thoại:</strong> 0706767778</li>
                                </ul>
                            </div>
                        </div>

                        <div class="col col-lg-2 col-md-3 col-sm-6">
                            <div class="footer_widget footer_useful_links">
                                <h3 class="footer_widget_title text-uppercase">Sản phẩm và dịch vụ</h3>
                                <ul class="ul_li_block">
                                    <li>Giải pháp chuyển đổi số cho tổ chức giáo dục</li>
                                    <li>Giải pháp chuyển đổi số cho doanh nghiệp vừa và nhỏ</li>
                                </ul>
                            </div>
                        </div>

                        <div class="col col-lg-4 col-md-6 col-sm-6">
                            <div class="footer_widget footer_contact">
                                <h3 class="footer_widget_title text-uppercase">Chương trình đào tạo</h3>
                                <ul class="ul_li_block">
                                    <li>Google Workspace Foundation</li>
                                    <li>Google Certified Educator Level 1&2</li>
                                    <li>Google Certified Trainer</li>
                                    <li>Luyện thi Google Certified Educator Level 1 & 2</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
        </footer>
        <style>
            /* Section Footer */
            .footer_section {
                background-color: #f8f9fa;
                padding: 40px 0;
            }

            .footer_widget {
                margin-bottom: 30px;
            }

                .footer_widget .brand_logo img {
                    max-width: 180px;
                    margin-bottom: 20px;
                }

                .footer_widget .footer_widget_title {
                    font-size: 1.25rem;
                    color: var(--bs-primary);
                    margin-bottom: 15px;
                }

                .footer_widget ul {
                    list-style-type: none;
                    padding-left: 0;
                }

                    .footer_widget ul li {
                        margin-bottom: 10px;
                        font-size: 0.875rem;
                    }

                        .footer_widget ul li strong {
                            font-weight: bold;
                        }

            .social_round ul_li {
                display: flex;
                gap: 10px;
            }

                .social_round ul_li li {
                    display: inline-block;
                }

                    .social_round ul_li li a {
                        font-size: 20px;
                        color: #333;
                    }

                        .social_round ul_li li a:hover {
                            color: var(--bs-primary);
                        }

            /* Footer Mobile */
            @@media (max-width: 768px) {
                .footer_widget

            {
                text-align: center;
            }

            }
        </style>
        <!-- footer_section - end
        ================================================== -->

    </div>
    <!-- body_wrap - end -->
    <!-- fraimwork - jquery include -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/bootstrap5-dropdown-ml-hack.js"></script>

    <!-- carousel - jquery include -->
    <script src="~/assets/js/slick.min.js"></script>

    <!-- popup - jquery include -->
    <script src="~/assets/js/magnific-popup.min.js"></script>

    <!-- jquery-ui - jquery include -->
    <script src="~/assets/js/jquery-ui.js"></script>

    <!-- off canvas sidebar - jquery include -->
    <script src="~/assets/js/mCustomScrollbar.js"></script>

    <!-- select option - jquery include -->
    <script src="~/assets/js/nice-select.min.js"></script>

    <!-- countdown timer - jquery include -->
    <script src="~/assets/js/countdown.js"></script>

    <!-- counter up - jquery include -->
    <script src="~/assets/js/counterup.min.js"></script>
    <script src="~/assets/js/waypoints.min.js"></script>

    <!-- custom - jquery include -->
    <script src="~/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function(){
            $('.main_slider').slick({
                arrows: false,
                dots: true,
                autoplay: true,
                autoplaySpeed: 3000
            });
        });
    </script>
    
</body>

    <script>
        $(document).ready(function() {
            $('.quick-view-btn').click(function() {
                var courseId = $(this).data('course');
                var card = $(this).closest('.course-card');
                var courseTitle = card.find('.card-title').text();
                var courseDescription = card.find('.card-text').text();
                var courseDetails = {};

                if (courseId === 1) {
                    courseDetails = { lessons: '10', duration: '2 hours', level: 'Basic' };
                } else if (courseId === 2) {
                    courseDetails = { lessons: '15', duration: '3 hours', level: 'Advanced' };
                } else if (courseId === 3) {    
                    courseDetails = { lessons: '12', duration: '2.5 hours', level: 'All Levels' };
                } else if (courseId === 4) {
                    courseDetails = { lessons: '8', duration: '1.5 hours', level: 'Intermediate' };
                }

                $('#quickViewModalLabel').text(courseTitle);
                $('#modalCourseTitle').text(courseTitle);
                $('#modalCourseDescription').text(courseDescription);
                $('#modalLessons').text(courseDetails.lessons);
                $('#modalDuration').text(courseDetails.duration);
                $('#modalLevel').text(courseDetails.level);

                $('#quickViewModal').modal('show');
            });
        });
    </script>

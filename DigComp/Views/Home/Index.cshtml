@{
    Layout = "_Layout";
}
 <style>
    /* 4 LÝ DO NÊN CHỌN CHÚNG TÔI SECTION */
    .reasons_section .title_text {
        color: var(--bs-primary); /* Tiêu đề màu xanh chủ đạo */
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 40px;
    }
    .reasons_section .service_boxed {
        background-color: var(--bs-light); /* Màu nền sáng */
        border: 2px solid var(--bs-secondary); /* Đường viền màu xám nhẹ */
        padding: 30px;
        text-align: center;
        transition: all 0.3s ease;
    }
        .reasons_section .service_boxed .item_icon span {
            color: var(--bs-primary); /* Màu xanh cho số thứ tự */
            font-size: 3rem; /* Tăng kích thước số */
            font-weight: bold;
        }
        .reasons_section .service_boxed .item_title {
            color: #000000; /* Màu chữ đen cho tiêu đề */
            font-size: 1.5rem; /* Tăng kích thước chữ tiêu đề */
            font-weight: 600;
            margin-top: 15px;
        }
        .reasons_section .service_boxed p {
            color: #000000; /* Màu chữ đen cho phần mô tả */
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
        }
        .reasons_section .service_boxed:hover {
            background-color: var(--bs-light); /* Giữ nguyên khi hover */
            color: #000000; /* Chữ đen khi hover */
        }
    .item_icon {
        color: #2742fd;
    }

    /* KHÓA HOC NỔI BẬT SECTION */
    /* Section Khóa Học Nổi Bật */
    .featured_courses_section {
        margin-top: 60px;
        margin-bottom: 60px;
    }
        .featured_courses_section .title_text {
            color: var(--bs-primary);
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 30px;
        }
    .course_card {
        border: 1px solid #ededed;
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
        background-color: #ffffff;
        position: relative;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        height: 450px; /* Cố định chiều cao của card */
    }
        .course_card:hover {
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }
    .course_image {
        width: 100%;
        height: 250px; /* Cố định chiều cao của hình ảnh */
        display: block;
        object-fit: cover;
        border-bottom: 1px solid #ededed;
    }
    .course_info {
        padding: 20px;
        text-align: left; /* Căn trái thông tin */
        height: 200px; /* Đảm bảo chiều cao của thông tin trong card */
    }
    .course_title {
        font-size: 1.25rem;
        color: #252525;
        font-weight: bold;
        margin-bottom: 10px;
    }
    .course_instructor {
        font-size: 1rem;
        color: #636363;
        margin-bottom: 10px;
    }
    .course_rating {
        font-size: 0.875rem;
        color: #f3970d;
        margin-bottom: 10px;
    }
    .course_price {
        font-size: 1.25rem;
        color: #252525;
        font-weight: bold;
        margin-bottom: 10px;
    }
    .course_start_date {
        font-size: 1rem;
        color: #636363;
        margin-bottom: 10px;
    }
    .best_seller {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #f3970d;
        color: #ffffff;
        font-size: 0.875rem;
        padding: 5px 10px;
        border-radius: 5px;
    }
    .btn_more_info {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        background-color: var(--bs-primary);
        color: #ffffff;
        padding: 10px 10px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }
        .btn_more_info:hover {
            background-color: #1a36d4;
        }
    .popup_details {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #ffffff;
        border: 1px solid #ededed;
        border-radius: 10px;
        padding: 20px;
        width: 90%;
        max-width: 300px;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.3s ease;
    }
    .course_card:hover .popup_details {
        opacity: 1;
        visibility: visible;
    }
    .popup_details h3 {
        font-size: 1.25rem;
        color: #252525;
        margin-bottom: 10px;
    }
    .popup_details p {
        color: #636363;
        font-size: 1rem;
        margin-bottom: 10px;
    }
    .add_to_cart {
        background-color: var(--bs-primary);
        color: #ffffff;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        display: block;
        margin-top: 10px;
        text-align: center;
    }
        .add_to_cart:hover {
            background-color: #1a36d4;
        }

    /* Đội ngũ giảng viên Section */
    .team_section {
        margin-top: 60px;
        margin-bottom: 60px;
    }
        .team_section .title_text {
            color: var(--bs-primary);
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .team_section .team_member {
            background-color: #ffffff;
            border: 1px solid #ededed;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            position: relative;
            display: flex;
            flex-direction: column;
            height: 100%;
            padding-bottom: 20px; /* Đảm bảo có không gian cho nút */
        }
            .team_section .team_member:hover {
                transform: translateY(-5px);
            }
        .team_section .team_image {
            width: 100%;
            height: 350px; /* Cố định chiều cao hình ảnh */
            object-fit: cover;
            display: block;
        }
        .team_section .team_info {
            padding: 20px;
            text-align: center;
            flex-grow: 1; /* Cho phép phần thông tin chiếm phần còn lại của card */
        }
        .team_section .team_name {
            font-size: 1.5rem;
            color: #252525;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .team_section .team_position,

    }

        .service_card:hover {
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.2);
            transform: translateY(-5px);
        }

    .service_header {
        position: absolute;
        top: 0;
        left: 0;
        background-color: #f3970d;
        color: #ffffff;
        font-weight: bold;
        padding: 5px 15px;
        border-radius: 5px;
        font-size: 0.8rem;
        margin-top: 10px;
    }

    .service_title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #252525;
        margin-top: 20px;
        text-align: center;
    }

    .service_subtitle {
        font-size: 1rem;
        color: #636363;
        margin-top: 10px;
        text-align: center;
    }

    .service_description {
        font-size: 1rem;
        color: #636363;
        margin-top: 10px;
    }

    .service_features {
        list-style: none;
        padding-left: 0;
        margin-top: 20px;
        font-size: 1rem;
        color: #636363;
    }

        .service_features li {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

            .service_features li::before {
                content: '\2713';
                margin-right: 10px;
                color: #28a745;
            }

    .btn_get_started, .btn_contact_pricing {
        background-color: var(--bs-primary);
        color: #ffffff;
        padding: 10px 20px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        margin-top: 20px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 80%;
        text-align: center;
    }

        .btn_get_started:hover, .btn_contact_pricing:hover {
            background-color: #1a36d4;
        }

    .btn_primary {
        background-color: var(--bs-primary);
        color: #ffffff;
        padding: 12px 30px;
        font-size: 1rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }

        .btn_primary:hover {
            background-color: #1a36d4;
        }

    hr {
        margin-top: 20px;
        margin-bottom: 20px;
        border: 0;
        border-top: 1px solid #ededed;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .service_card

    {
        padding: 15px;
    }

    .service_title {
        font-size: 1.25rem;
    }

    .service_description {
        font-size: 0.875rem;
    }

    }

    /* Section Đối Tác */
    .partners_section {
        margin-top: 60px;
        margin-bottom: 60px;
    }

        .partners_section .title_text {
            color: var(--bs-primary);
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 40px;
        }

    .partner_logo {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .partner_logo img {
            max-width: 100%;
            height: auto;
            margin: 0 auto;
            max-height: 120px; /* Adjust based on logo size */
        }

    /* Điều chỉnh hiển thị cho màn hình nhỏ hơn */
    @@media (max-width: 768px) {
        .partner_logo img

    {
        max-height: 100px;
    }

    }
</style>

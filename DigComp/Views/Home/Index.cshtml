        font-weight: bold;
        display: inline-block;
        margin-top: 10px;
    }
        .btn_more_info_gv:hover {
            background-color: #1a36d4;
        }
    /* Section Dịch Vụ Nổi Bật */
    .services_section {
        margin-top: 60px;
        margin-bottom: 60px;
    }

        .services_section .title_text {
            color: var(--bs-primary);

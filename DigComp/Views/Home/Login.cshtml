@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout";
}

<div class="breadcrumb_section">
    <div class="container">
        <ul class="breadcrumb_nav ul_li">
            <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li>Đăng nhập</li>
        </ul>
    </div>
</div>

<section class="register_section section_space">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <h3 class="section_title">Đăng nhập</h3>
                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                }
                <form asp-action="Login" method="post">
                    <div class="form_item_wrap">
                        <h3 class="input_title">User Name/Email*</h3>
                        <div class="form_item">
                            <label for="username_input"></label>
                            <input id="username_input" type="text" name="Username" placeholder="User Name">
                        </div>
                    </div>

                    <div class="form_item_wrap">
                        <h3 class="input_title">Mật khẩu*</h3>
                        <div class="form_item">
                            <label for="password_input"></label>
                            <input id="password_input" type="password" name="Password" placeholder="Mật khẩu">
                        </div>
                    </div>

                    <div class="text-start">
                        <button type="submit" class="btn btn_secondary">Đăng nhập</button>
                    </div>  
                </form>

                <p class="text-center mt-3">
                    Chưa có tài khoản? <a asp-controller="Home" asp-action="Register">Đăng ký ngay</a>
                </p>
            </div>
        </div>
    </div>
</section>

@{
    ViewData["Title"] = "Đối Tác";
}

<style>
    .partner-section {
        padding: 50px 0;
        background-color: #ffffff;
    }

    .section-title {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 40px;
        color: #333;
    }

    .partner-cards {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Bạn có thể đổi thành 3 nếu muốn nhiều cột hơn */
        gap: 40px;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .partner-card {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 150px; /* Chiều cao cố định cho tất cả khung logo */
        padding: 20px;
        background-color: #fff;
    }

    .partner-logo {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .partner-logo img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }
</style>

<div class="partner-section">
    <h2 class="section-title">Đối Tác Chiến Lược Toàn Cầu</h2>
    <div class="partner-cards">
        <div class="partner-card">
            <div class="partner-logo">
                <img src="~/assets/images/logopartner/GfE-Partner-Badges-Horizontal.png" alt="Partner 1">
            </div>
        </div>
        <div class="partner-card">
            <div class="partner-logo">
                <img src="~/assets/images/logoPartner/google_logo-1536x922.png" alt="Partner 2">
            </div>
        </div>
        <div class="partner-card">
            <div class="partner-logo">
                <img src="~/assets/images/logoPartner/Logo-ACHISON-with-ISO-9001_WEB.jpeg" alt="Partner 3">
            </div>
        </div>
        <div class="partner-card">
            <div class="partner-logo">
                <img src="~/assets/images/logoPartner/Logo-HCMUE---ENG-2.png" alt="Partner 4">
            </div>
        </div>
        <div class="partner-card">
            <div class="partner-logo">
                <img src="~/assets/images/logoPartner/Google_Cloud_logo.png" alt="Partner 5">
            </div>
        </div>
        <div class="partner-card">
            <div class="partner-logo">
                <img src="~/assets/images/logoPartner/Google_for_Education_logo.svg.png" alt="Partner 6">
            </div>
        </div>
        <div class="partner-card">
            <div class="partner-logo">
                <img src="~/assets/images/logopartner/SGU-LOGO.png" alt="Partner 7">
            </div>
        </div>

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "_Layout";
}

<!-- breadcrumb_section - start -->
<div class="breadcrumb_section">
    <div class="container">
        <ul class="breadcrumb_nav ul_li">
            <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li>Đổi mật khẩu</li>
        </ul>
    </div>
</div>
<!-- breadcrumb_section - end -->
<!-- account_section - start -->
<section class="account_section section_space">
    <div class="container">
        <div class="row">
            <div class="col col-lg-3">
                <div class="account_menu">
                    <h2 class="title_text">Tài khoản của tôi</h2>
                    <ul class="account_menu_list ul_li_block">
                        <li><a asp-controller="Home" asp-action="Account">Tổng quan tài khoản</a></li>
                        <li><a asp-controller="Home" asp-action="AccountInfo">Thông tin tài khoản</a></li>
                        <li class="active"><a href="#">Đổi mật khẩu</a></li>
                    </ul>
                </div>
            </div>

            <div class="col col-lg-9">
                <div class="account_content_area">
                    <h3>Đổi mật khẩu</h3>

                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                    }

                    <form asp-action="ChangePassword" method="post">
                        <div class="form-group">
                            <label for="old_password_input">Mật khẩu cũ</label>
                            <input type="password" id="old_password_input" name="OldPassword" class="form-control" required>
                        </div>

                        <div class="form-group">
                            <label for="new_password_input">Mật khẩu mới</label>
                            <input type="password" id="new_password_input" name="NewPassword" class="form-control" required>
                        </div>

                        <div class="text-start mt-3">
                            <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- account_section - end -->

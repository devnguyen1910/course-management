@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_Layout";

    // Kiểm tra xem có tab nào được chỉ định không (chuyển từ HomeController)
    string tabId = TempData["tabId"]?.ToString() ?? "signup_tab"; // Mặc định là "signup_tab"
}

<!-- breadcrumb_section - start -->
<div class="breadcrumb_section">
    <div class="container">
        <ul class="breadcrumb_nav ul_li">
            <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
            <li>Đăng ký</li>
        </ul>
    </div>
</div>
<!-- breadcrumb_section - end -->
<!-- register_section - start -->
<section class="register_section section_space">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <ul class="nav register_tabnav ul_li_center" role="tablist">
                    <li role="presentation">
                        <button class="@((tabId == "signin_tab") ? "active" : "")" data-bs-toggle="tab" data-bs-target="#signin_tab" type="button" role="tab" aria-controls="signin_tab" aria-selected="true">
                            Đăng nhập
                        </button>
                    </li>
                    <li role="presentation">
                        <button class="@((tabId == "signup_tab") ? "active" : "")" data-bs-toggle="tab" data-bs-target="#signup_tab" type="button" role="tab" aria-controls="signup_tab" aria-selected="false">
                            Đăng ký
                        </button>
                    </li>
                </ul>
                <div class="register_wrap tab-content">
                    <!-- Đăng nhập -->
                    <div class="tab-pane fade show active" id="signin_tab" role="tabpanel">
                        <form asp-action="Login" method="post">
                            <div class="form_item_wrap">
                                <h3 class="input_title">User Name/Email*</h3>
                                <div class="form_item">
                                    <label for="username_input"><i class="fas fa-user"></i></label>
                                    <input id="username_input" type="text" name="Username" placeholder="User Name">
                                </div>
                            </div>

                            <div class="form_item_wrap">
                                <h3 class="input_title">Mật khẩu*</h3>
                                <div class="form_item">
                                    <label for="password_input"><i class="fas fa-lock"></i></label>
                                    <input id="password_input" type="password" name="Password" placeholder="Mật khẩu">
                                </div>
                            </div>

                            <div class="text-start">
                                <button type="submit" class="btn btn_secondary">Đăng nhập</button>
                            </div>
                        </form>
                    </div>

                    <!-- Đăng ký -->
                    <div class="tab-pane fade" id="signup_tab" role="tabpanel">
                        <form asp-action="Register" method="post">
                            <div class="form_item_wrap">
                                <h3 class="input_title">User Name*</h3>
                                <div class="form_item">
                                    <label for="username_input2"><i class="fas fa-user"></i></label>
                                    <input id="username_input2" type="text" name="Username" placeholder="User Name">
                                </div>
                            </div>

                            <div class="form_item_wrap">
                                <h3 class="input_title">Mật khẩu*</h3>
                                <div class="form_item">
                                    <label for="password_input2"><i class="fas fa-lock"></i></label>
                                    <input id="password_input2" type="password" name="Password" placeholder="Mật khẩu">
                                </div>
                            </div>

                            <div class="form_item_wrap">
                                <h3 class="input_title">Email*</h3>
                                <div class="form_item">
                                    <label for="email_input"><i class="fas fa-envelope"></i></label>
                                    <input id="email_input" type="email" name="Email" placeholder="Email">
                                </div>
                            </div>

                            <div class="text-start">
                                <button type="submit" class="btn btn_secondary">Đăng ký</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- register_section - end -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
